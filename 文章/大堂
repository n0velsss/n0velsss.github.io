  <script>
document.addEventListener("DOMContentLoaded", function () {
  var modeToggle = document.getElementById("mode-toggle");
  var htmlElement = document.getElementsByTagName("html")[0];

  modeToggle.addEventListener("click", function () {
    htmlElement.classList.toggle("night-mode");
  });
  modeToggle.click();
});




var isTransparent = false;
    var toggleButton = document.getElementById("toggleButton");

    toggleButton.addEventListener("click", function() {
      var elements = document.querySelectorAll("body *");
      
      if (isTransparent) {
        for (var i = 0; i < elements.length; i++) {
          elements[i].classList.remove("transparent");
        }
      } else {
        for (var i = 0; i < elements.length; i++) {
          elements[i].classList.add("transparent");
        }
      }
      
      isTransparent = !isTransparent;
    });







// 檢查裝置是否支援傾斜事件
  if ('DeviceOrientationEvent' in window) {
    window.addEventListener('deviceorientation', handleOrientation);
  }

  function handleOrientation(event) {
    // 取得傾斜角度
    var tiltLR = -event.gamma/4; // 左右傾斜
    var tiltFB = -event.beta/5;  // 前後傾斜

    // 根據傾斜角度移動div
    var div = document.querySelector('.img');
    div.style.transform = 'translate(' + tiltLR + 'px, ' + tiltFB + 'px)';
    
  }
  </script>
</body>

